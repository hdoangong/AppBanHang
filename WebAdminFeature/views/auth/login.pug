html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel="stylesheet" , href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
		link(rel="stylesheet", href="/styles/custom.css")
	body
		.container
			.row
				.col-sm-9.col-md-7.col-lg-5.mx-auto
					.card.card-signin.my-5
						.card-body
							h5.card-title.text-center Sign In
							if errors
								each error in errors
									.alert.alert-danger=error
							form(action="/auth/login",method="POST").form-signin
								.form-label-group
									input#inputEmail.form-control(name="email",type='text', placeholder='Email address', required='', autofocus='')
									label(for='inputEmail') Email address
								.form-label-group
									input#inputPassword.form-control(name="password",type='password', placeholder='Password', required='')
									label(for='inputPassword') Password
								.custom-control.custom-checkbox.mb-3
									input#customCheck1.custom-control-input(type='checkbox')
									label.custom-control-label(for='customCheck1') Remember password
								button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in
								hr.my-4
								button.btn.btn-lg.btn-google.btn-block.text-uppercase(type='submit')
									i.fab.fa-google.mr-2
									|  Sign in with Google
								button.btn.btn-lg.btn-facebook.btn-block.text-uppercase(type='submit')
									i.fab.fa-facebook-f.mr-2
									|  Sign in with Facebook
